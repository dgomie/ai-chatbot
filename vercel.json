{
    "version": 2,
    "builds": [
      {
        "src": "apps/client/package.json",
        "use": "@vercel/static-build"
      },
      {
        "src": "apps/index.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/apps/index.js"
      }
    ]
  }